<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".aiclone.fragments.AiCloneFragmentFirst"
    android:background="@drawable/bg_main"
    android:padding="20dp">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:layout_marginTop="1dp"/>

    <ImageView
        android:id="@+id/ai_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.6"
        android:src="@drawable/aichat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_icon"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Make Your AI Clone"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ai_icon"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tajim AI lets you create your own virtual clone that talks and behaves like you!"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        android:id="@+id/tv_helper"
        android:paddingHorizontal="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="5dp"
        android:text="Next"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_helper"
        android:layout_marginTop="10dp"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="5dp"
        android:text="Back"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_next"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:id="@+id/btn_back"
        android:textColor="@color/black"
        app:strokeColor="@color/theme"
        app:strokeWidth="1dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"




        />















</androidx.constraintlayout.widget.ConstraintLayout>