<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="15dp"
    android:background="@drawable/bg_main"
    tools:context=".form.fragments.FormFragmentFourth">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_text_edu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Education &amp; Profession"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/helper_text_edu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Fill in your education and profession details."
            app:layout_constraintTop_toBottomOf="@id/title_text_edu"
            android:layout_marginTop="5dp"
            android:textColor="@color/black" />

        <!-- Education -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_education"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Education"
            app:layout_constraintTop_toBottomOf="@id/helper_text_edu">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- School -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_school"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="School / College"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_education">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Profession -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_profession"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Profession"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_school">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_profession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Skills -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_skills"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Skills (comma separated)"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_profession">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Certifications -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_certifications"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Certifications (comma separated)"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_skills">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_certifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Projects Completed -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_projects"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Projects Completed (comma separated)"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_certifications">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_projects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Next Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next_edu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            app:cornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_projects"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#67FFFFFF"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/theme" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
