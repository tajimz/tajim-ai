<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="15dp"
    android:background="@drawable/bg_main"
    tools:context=".form.fragments.FormFragmentFifth">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_text_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact &amp; Socials"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/helper_text_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Fill in your contact info and social links."
            app:layout_constraintTop_toBottomOf="@id/title_text_contact"
            android:layout_marginTop="5dp"
            android:textColor="@color/black" />

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Email"
            app:layout_constraintTop_toBottomOf="@id/helper_text_contact">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_phone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Phone"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Facebook -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_facebook"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Facebook URL"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_phone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Instagram -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_instagram"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Instagram URL"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_facebook">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Twitter -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_twitter"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Twitter URL"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_instagram">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- LinkedIn -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_linkedin"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="LinkedIn URL"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_twitter">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_linkedin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Websites -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_websites"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Websites (comma separated)"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_linkedin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_websites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Next Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            app:cornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_websites"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#67FFFFFF"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/theme" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
