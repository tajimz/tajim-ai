<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="15dp"
    android:background="@drawable/bg_main"
    tools:context=".form.fragments.FormFragmentThird">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_text_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Health &amp; Fitness"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/helper_text_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Fill in your health details."
            app:layout_constraintTop_toBottomOf="@id/title_text_health"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>

        <!-- Height -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_height"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Height (cm)"
            app:layout_constraintTop_toBottomOf="@id/helper_text_health">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Weight -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_weight"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Weight (kg)"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_height">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Blood Group -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_blood"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Blood Group"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_weight">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_blood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sleep Schedule -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_sleep"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Sleep Schedule (e.g., 11 PM)"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_blood">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_sleep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Allergies -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_allergies"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Allergies (comma separated)"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_sleep">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_allergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fitness Activities -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_layout_fitness"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Fitness Activities (comma separated)"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_allergies">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_fitness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            app:cornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/ed_layout_fitness"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#67FFFFFF"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            app:strokeColor="@color/theme" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
