<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".aiclone.fragments.AiCloneFragmentSecond"
    android:background="@drawable/bg_main"
    android:padding="15sp">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:layout_marginTop="1dp"/>

    <ImageView
        android:id="@+id/ai_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.4"
        android:src="@drawable/howitworks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_icon"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="How It Works"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ai_icon"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Fill Out the Clone Form\n2. Submit the form to get a json file\n3.go to Change AI Personality â†’ Import, and select your .json file.\n4.Done! Your AI clone is ready to chat."
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        android:id="@+id/tv_helper"
        android:paddingHorizontal="20dp"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="5dp"
        android:text="Procceed"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_helper"
        android:layout_marginTop="25dp"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="5dp"
        android:text="Back"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_next"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:id="@+id/btn_back"
        android:textColor="@color/black"
        app:strokeColor="@color/theme"
        app:strokeWidth="1dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"






        />

</androidx.constraintlayout.widget.ConstraintLayout>